<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_food"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="start" >

    <TextView
        android:id="@+id/place_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rating_line"
        
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/meal_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/place_line"
        
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/type_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/meal_line"
        android:paddingRight="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/cost_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/type_line"
        android:layout_below="@+id/meal_line"
        android:maxWidth="160dp"
        android:paddingLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#339900"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/type_line"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:typeface="serif" />

    <TextView
        android:id="@+id/lined"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_line"
        android:background="#FF0000"
        android:textSize="2dp" />

    <RatingBar
        android:id="@+id/rating_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:isIndicator="true"
        android:minHeight="47dip" />

</RelativeLayout>